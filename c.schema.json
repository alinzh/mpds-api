{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "description": "JSON format used in the MPDS API for the phase diagrams (C-entries)",
    "version": "0.0.5",
    "type": "object",
    "properties": {
        "title": {
            "description": "Phase diagram title",
            "type": "string",
            "required": true
        },
        "naxes": {
            "description": "Number of axes",
            "type": "number",
            "required": true,
            "minimum": 2,
            "maximum": 3
        },
        "arity": {
            "description": "Elements count",
            "type": "number",
            "required": true,
            "minimum": 2,
            "maximum": 3
        },
        "xtitle": {
            "description": "Title of X axis",
            "type": "string",
            "required": true
        },
        "ytitle": {
            "description": "Title of Y axis",
            "type": "string",
            "required": true
        },
        "ztitle": {
            "description": "Title of Z axis",
            "type": "string",
            "required": true
        },
        "xrange": {
            "description": "Range of X axis",
            "type": "array",
            "required": true,
            "minItems": 2,
            "maxItems": 2
        },
        "yrange": {
            "description": "Range of Y axis",
            "type": "array",
            "required": true,
            "minItems": 2,
            "maxItems": 2
        },
        "zrange": {
            "description": "Range of Z axis",
            "type": "array",
            "required": true,
            "minItems": 2,
            "maxItems": 2
        },
        "labels": {
            "description": "Labels for phases, as appear at the source plot",
            "type": "array",
            "required": true
        },
        "shapes": {
            "description": "SVG paths for phases, as extracted from the vector image",
            "type": "array",
            "required": true
        },
        "entry": {
            "description": "Internal LPF and MPDS.IO identifier",
            "type": "string",
            "required": true
        },
        "version": {
            "description": "MPDS.IO API version",
            "type": "string",
            "required": true,
            "enum": ["0.0.5"]
        },
        "object_repr": {
            "description": "Legacy information",
            "type": "string",
            "required": true
        }
    }
}
